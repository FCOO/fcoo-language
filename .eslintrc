{
    "env": {
        "browser": true,
        "jquery" : true
    },

    "extends": "eslint:recommended",
 
    "globals": {
        "$"         : false,
        "L"         : false,
        "undefined" : false,
        "moment"    : false,
        "Raven"     : false,
        "i18next"   : true
    },

    "allowInlineConfig": true,

    "rules": {
        "strict"                  : "error",
        "camelcase"               : "off",
        "no-mixed-spaces-and-tabs": "warn",
        "semi"                    : "warn",
        "no-extra-semi"           : "warn"
    }
}
